generator client {
  provider = "prisma-client-js"
  output   = "../src/database/generated/client"

}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  orders    Order[]
}

model Order {
  id          String   @id @default(uuid())
  customer    Customer @relation(fields: [customerId], references: [id])
  customerId  String
  totalPrice  Decimal
  status      OrderStatus
  createdAt   DateTime @default(now())
  orderItems  OrderItem[]
}

/// ✅ **5. รายการสินค้าภายในคำสั่งซื้อ**
model OrderItem {
  id          String   @id @default(uuid())
  order       Order    @relation(fields: [orderId], references: [id])
  orderId     String
  productId   String
  warehouseId String
  quantity    Int
  subtotal    Decimal
}

enum OrderStatus {
  Pending
  Processing
  Shipped
  Delivered
  Cancelled
}